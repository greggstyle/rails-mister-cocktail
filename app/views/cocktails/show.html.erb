<div class ="container">
  <div class="row">
    <div class="col-sm-offset-2 col-sm-10">
      <h1 class: "h1"> Cocktails </h1>

      <h3> <%= @cocktail.name.upcase %> </h3>
      <ul>
      <% @cocktail.doses.each do |dose| %>
      <%= dose.ingredient.name %>
      <%= dose.description %>
      <%= link_to "", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } , class: "fa fa-trash"%>
      <% end %>
      <br>
      <br>
      <%= link_to "home", cocktails_path, class: 'btn btn-info'%>
      <%= link_to "add dose ", new_cocktail_dose_path(@cocktail), class: "btn btn-success " %>


      <%= link_to " delete", cocktail_path,
      method: :delete,
      data: { confirm: "Are you sure you want to delete cocktail?" } , class: "btn btn-danger" %>

    </div>
  </div>
</div>


